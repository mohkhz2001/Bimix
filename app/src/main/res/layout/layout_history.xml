<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_history_layout"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_iran_insurance" />

                <TextView
                    android:id="@+id/kind_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/ic"
                    android:text="بیمه شخص ثالث"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/discribe_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kind_txt"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/ic"
                    android:fontFamily="@font/yekan"
                    android:text="توضیحات:"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kind_txt"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/discribe_txt"
                    android:fontFamily="@font/yekan"
                    android:text="پژو 206 , 1400"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discribe_txt"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@id/ic"
                    android:fontFamily="@font/yekan"
                    android:text="وضعیت:"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discribe_txt"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/status_txt"
                    android:fontFamily="@font/yekan"
                    android:text="در حال صدور"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#808080" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yekan"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/trackingCode_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/yekan"
                    android:text="کد پیگیری:"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trackingCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/trackingCode_txt"
                    android:fontFamily="@font/yekan"
                    android:text="859865873"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/date_req"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/yekan"
                    android:text="1400/2/28"
                    android:textColor="#3E3E3E"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/payCode_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trackingCode_txt"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/yekan"
                    android:text="کد پرداخت: "
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/pay"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/payCode_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_history_layout_getbtn"
                    android:backgroundTint="#00E80C"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="پرداخت بیمه نامه"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:backgroundTint="@null"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/payed"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/pay"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_history_layout_getbtn"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="بیمه نامه را پرداخت کردم."
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:backgroundTint="@null"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/payed_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payed"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/yekan"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="کاربر گرامی درخواست شما ثبت شده.\nتا دقایقی دیگر درخواست شما تایید میشود."
                    android:textColor="#001EE4"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/payCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trackingCode_txt"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/payCode_txt"
                    android:fontFamily="@font/yekan"
                    android:text="98798111111546548498456"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/get_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payed_txt"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="دریافت بیمه نامه: "
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/get"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/payed_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_history_layout_getbtn"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="دریافت"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>